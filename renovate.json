{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "description": "Tag the waddlers Github Team for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "reviewers": [
        "team:waddlers"
      ]
    },
    {
      "automerge": true,
      "description": "Group minor and patch updates into a single PR",
      "groupName": "dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ],
  "schedule": [
    "every weekend"
  ],
  "separateMinorPatch": true,
  "timezone": "America/Los_Angeles"
}
